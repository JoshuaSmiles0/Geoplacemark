{{> nav active = "mySites"}}


<section class="section">
<h1 class ="title is-underlined has-text-centered">
  {{title}}
</h1>
<div class= "box">
  <h2 class = "subtitle">
    Current Geosite Details
  </h2>
  <table class = "table is-fullwidth">
   <thead>
    <trow>
      <th>Location</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Type</th>
      <th>Description</th>
    </trow>
   </thead>
   <tbody>
    <tr>
      <td>
        {{poi.location}}
      </td>
      <td>
        {{poi.lat}}
      </td>
      <td>
        {{poi.long}}
      </td>
      <td>
        {{poi.type}}
      </td>
            <td>
        {{poi.description}}
      </td>
     </tr>
    </tbody>
  </table>
</div>
</section>
<section class="section">
<h2 class="subtitle">Enter new details</h2>
<form action="/poi/{{poi._id}}/commitPoiUpdate" method="POST">
    <div class="field">
        <label class="label">Location</label><input class="input" type="text" placeholder="Enter Location Name" name="location">
    </div>
    <div class="field">
        <label class="label">Latitude</label><input class="input" type="number" step="any" placeholder="Enter latitude" name="lat">
    </div>
    <div class="field">
      <label class="label">Longitude</label> <input class="input" type="number" step="any" placeholder="Enter longitude" name="long">
    </div>
    <div class="field">
      <label class="label">Type</label> 
      <div class="select">
        <select name="type">
            <option value="economic">Economic site</option>
            <option value="mineralogical">Mineralogical site</option>
            <option value="palaeo">Palaeontological site</option>
        </select>
    </div>
    <div class="field">
        <label class="label">Description</label>
        <textarea class="textarea" placeholder="Enter short description" name="description"></textarea>
    </div>
    <div class="field is-grouped">
      <button class="button is-info">Submit</button>
    </div>
  </form>
  </section>